<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    android:background="@drawable/top_tab_gradient_drawable">

    <TextView
        android:id="@+id/textViewForYou"
        style="@style/TabTextViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Для Вас"
        app:layout_constraintEnd_toStartOf="@+id/textViewSubscriptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSubscriptions"
        style="@style/TabTextViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подписки"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewForYou"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
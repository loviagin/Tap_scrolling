<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewForYou"
        style="@style/TabTextViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Для Вас"
        app:layout_constraintEnd_toStartOf="@+id/textViewSubscriptions"
        app:layout_constraintStart_toStartOf="@id/viewPagerVideos"
        app:layout_constraintTop_toTopOf="@id/viewPagerVideos" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewSubscriptions"
        style="@style/TabTextViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подписки"
        app:layout_constraintEnd_toEndOf="@id/viewPagerVideos"
        app:layout_constraintStart_toEndOf="@+id/textViewForYou"
        app:layout_constraintTop_toTopOf="@id/viewPagerVideos" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerVideos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar_onmain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/viewPagerVideos"
        app:layout_constraintEnd_toEndOf="@+id/viewPagerVideos"
        app:layout_constraintStart_toStartOf="@id/viewPagerVideos"
        app:layout_constraintTop_toTopOf="@id/viewPagerVideos" />

    <include
        android:id="@+id/bottom_bar_onmain"
        layout="@layout/ts_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>